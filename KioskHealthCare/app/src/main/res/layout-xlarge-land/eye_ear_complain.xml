<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="fill_parent"
    android:padding="10dp"
    android:layout_width="fill_parent"
    android:layout_gravity="top|left"
    android:background="@drawable/back7">

    <HorizontalScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true"
        android:focusableInTouchMode="false"
        >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginBottom="30dp">

            <LinearLayout
                style="@style/gameLinearLayout">

                <TextView
                    style="@style/gameTextSize"
                    android:text="Eye"
                    android:layout_marginLeft="10dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:background="@drawable/layout_back2">

                <LinearLayout
                    style="@style/gameLinearLayout"
                    android:layout_width="fill_parent">

                    <TextView
                        style="@style/gameTextSize4"
                        android:text="Difficulty in Seeing : "/>

                        <EditText
                            style="@style/gameText2"
                            android:singleLine="true"
                            android:id="@+id/eye_ear_difficultyId"/>
                </LinearLayout>

                <LinearLayout
                    style="@style/gameLinearLayout"
                    android:layout_width="fill_parent">

                    <TextView
                        style="@style/gameTextSize4"
                        android:text="Injury : "/>

                </LinearLayout>

                <LinearLayout
                    style="@style/gameLinearLayout"
                    android:layout_width="fill_parent">

                    <TextView
                        style="@style/gameTextSize4"
                        android:text="When : "/>

                    <EditText
                        style="@style/gameText2"
                        android:singleLine="true"
                        android:layout_marginLeft="40dp"
                        android:id="@+id/eye_ear_whenId"/>
                </LinearLayout>

                <LinearLayout
                    style="@style/gameLinearLayout"
                    android:layout_width="fill_parent">

                    <TextView
                        style="@style/gameTextSize4"
                        android:text="How : "/>

                    <EditText
                        style="@style/gameText2"
                        android:singleLine="true"
                        android:layout_marginLeft="56dp"
                        android:id="@+id/eye_ear_howId"/>
                </LinearLayout>

                <LinearLayout
                    style="@style/gameLinearLayout"
                    android:layout_width="fill_parent">

                    <TextView
                        style="@style/gameTextSize4"
                        android:text="Location : "/>

                    <RadioGroup
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:id="@+id/eye_ear_locationRdg">

                        <RadioButton
                            style="@style/gameTextSize4"
                            android:text="Left"
                            android:id="@+id/eye_ear_locationleftId"/>

                        <RadioButton
                            style="@style/gameTextSize4"
                            android:text="Right"
                            android:layout_marginLeft="20dp"
                            android:id="@+id/eye_ear_locationrightId"/>

                        <RadioButton
                            style="@style/gameTextSize4"
                            android:text="Both"
                            android:layout_marginLeft="20dp"
                            android:id="@+id/eye_ear_locationbothId"/>

                    </RadioGroup>

                </LinearLayout>

                <LinearLayout
                    style="@style/gameLinearLayout"
                    android:layout_width="fill_parent">

                    <TextView
                        style="@style/gameTextSize4"
                        android:text="Other : "/>

                    <EditText
                        style="@style/gameText2"
                        android:singleLine="true"
                        android:layout_marginLeft="40dp"
                        android:id="@+id/eye_ear_otherId"/>

                </LinearLayout>

                <LinearLayout
                    style="@style/gameLinearLayout"
                    android:layout_width="fill_parent"
                    android:layout_marginBottom="30dp"
                    android:layout_marginLeft="156dp">

                    <Button
                        style="@style/gameTextStyle"
                        android:textSize="30dp"
                        android:layout_width="250dp"

                        android:layout_height="wrap_content"
                        android:text="Reset"
                        android:id="@+id/eye_ear_eyeResetId"
                        android:background="@drawable/bkg7"
                        android:textColor="#FFFFFF"/>


                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                style="@style/gameLinearLayout">

                <TextView
                    style="@style/gameTextSize"
                    android:text="Ear"
                    android:layout_marginLeft="10dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:orientation="vertical"
                android:background="@drawable/layout_back2">

                <LinearLayout
                    style="@style/gameLinearLayout"
                    android:layout_width="fill_parent">

                    <TextView
                        style="@style/gameTextSize4"
                        android:text="Pain : "/>

                    <RadioGroup
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="95dp"
                        android:id="@+id/eye_ear_painRdg">

                        <RadioButton
                            style="@style/gameTextSize4"
                            android:text="Left"
                            android:id="@+id/eye_ear_painleftId"/>

                        <RadioButton
                            style="@style/gameTextSize4"
                            android:text="Right"
                            android:layout_marginLeft="20dp"
                            android:id="@+id/eye_ear_painrightId"/>

                        <RadioButton
                            style="@style/gameTextSize4"
                            android:text="Both"
                            android:layout_marginLeft="20dp"
                            android:id="@+id/eye_ear_painbothId"/>

                    </RadioGroup>

                </LinearLayout>

                <LinearLayout
                    style="@style/gameLinearLayout"
                    android:layout_width="fill_parent">

                    <TextView
                        style="@style/gameTextSize4"
                        android:text="Discharge : "/>

                    <RadioGroup
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:orientation="horizontal"
                        android:id="@+id/eye_ear_dischargeRdg">

                        <RadioButton
                            style="@style/gameTextSize4"
                            android:text="Left"
                            android:id="@+id/eye_ear_dischargeleftId"/>

                        <RadioButton
                            style="@style/gameTextSize4"
                            android:text="Right"
                            android:layout_marginLeft="20dp"
                            android:id="@+id/eye_ear_dischargerightId"/>

                        <RadioButton
                            style="@style/gameTextSize4"
                            android:text="Both"
                            android:layout_marginLeft="20dp"
                            android:id="@+id/eye_ear_dischargebothId"/>

                    </RadioGroup>

                </LinearLayout>

                <LinearLayout
                    style="@style/gameLinearLayout"
                    android:layout_width="fill_parent">

                    <TextView
                        style="@style/gameTextSize4"
                        android:text="Can't Hear : "/>

                    <EditText
                        style="@style/gameText2"
                        android:singleLine="true"
                        android:layout_marginLeft="20dp"
                        android:id="@+id/eye_ear_canthearId"/>
                </LinearLayout>


                <LinearLayout
                    style="@style/gameLinearLayout"
                    android:layout_width="fill_parent"
                    android:layout_marginBottom="30dp"
                    android:layout_marginLeft="199dp">

                    <Button
                        style="@style/gameTextStyle"
                        android:textSize="30dp"
                        android:layout_width="250dp"

                        android:layout_height="wrap_content"
                        android:text="Reset"
                        android:id="@+id/eye_ear_earResetId"
                        android:background="@drawable/bkg7"
                        android:textColor="#FFFFFF"/>

                </LinearLayout>


            </LinearLayout>




        </LinearLayout>

    </HorizontalScrollView>
</ScrollView>