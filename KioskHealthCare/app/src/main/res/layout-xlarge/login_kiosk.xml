<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="fill_parent"
    android:padding="10dp"
    android:layout_width="fill_parent"
    android:layout_gravity="top|left"
    android:background="@drawable/back4">

    <HorizontalScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true"
        android:focusableInTouchMode="false"
        >

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    >


    <LinearLayout
        style="@style/gameLinearLayoutCenter"
        android:layout_marginTop="100dp">

        <TextView
            android:textSize="80dp"
            android:text="KIOSK"
            android:textColor="#2A0230"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            />

    </LinearLayout>

    <LinearLayout
        style="@style/gameLinearLayoutCenter"
        android:layout_marginTop="70dp">

        <EditText
            android:layout_width="500dp"
            android:layout_height="40dp"
            android:singleLine="true"
            android:hint="Username"
            android:background="@drawable/round_corner3"
            android:textColor="#000003"
            android:paddingLeft="10dp"
            android:id="@+id/login_kiosk_usernameId"
            />

    </LinearLayout>

    <LinearLayout
        style="@style/gameLinearLayoutCenter"
        android:layout_marginTop="30dp">

        <EditText
            android:id="@+id/login_kiosk_passwordId"
            android:layout_width="500dp"
            android:layout_height="40dp"
            android:singleLine="true"
            android:password="true"
            android:background="@drawable/round_corner3"
            android:textColor="#000003"
            android:paddingLeft="10dp"
            android:hint="Password"
            />

    </LinearLayout>

    <LinearLayout
        style="@style/gameLinearLayoutCenter"
        android:layout_marginTop="30dp">

        <Button
            android:id="@+id/login_kiosk_signInId"
            android:textAppearance="@style/gameTextStyle"
            android:layout_marginTop="10dp"
            android:layout_width="370dp"
            android:layout_height="60dp"
            android:text="Sign In"
            android:textSize="30dp"
            android:textColor="#FFFFFF"
            android:background="@drawable/bkg"/>




    </LinearLayout>

    <LinearLayout
        style="@style/gameLinearLayoutCenter"
        android:orientation="vertical"
        android:layout_marginTop="350dp">

        <TextView
            style="@style/gameTextStyle"
            android:id="@+id/signupId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:text="Haven't got an account yet?"
            android:textColor="#F77E0D"
            />
        <Button
            android:id="@+id/login_kiosk_signUpId"
            android:layout_marginTop="10dp"
            android:layout_width="370dp"
            android:layout_height="60dp"
            android:text="Sign Up"
            android:textSize="30dp"
            android:textColor="#FFFFFF"
            android:background="@drawable/bkg1"
            android:textAppearance="@style/gameTextStyle"/>

    </LinearLayout>

</LinearLayout>
    </HorizontalScrollView>
    </ScrollView>